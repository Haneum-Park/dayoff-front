{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "target": "ES5",
    "module": "ESNext",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@images/*": [
        "./public/images/*"
      ],
      "@atoms/*": [
        "./components/atoms/*"
      ],
      "@blocks/*": [
        "./components/blocks/*"
      ],
      "@commons/*": [
        "./components/blocks/common/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@stores/*": [
        "./stores/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@consts/*": [
        "./consts/*"
      ],
      "@libs/*": [
        "./lib/*"
      ]
    },
    "noEmit": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "server.js",
    "@types/*",
    "next-i18next.config.js"
  ]
}
